    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
    <p id="gen"><%= data %></p>
    <div id="copySuccess">
      <h1>Ссылка скопирована</h1>
    </div>
    <header id="head">
      <img id="head-image" onclick="toMain()" src="/img/logo-white.svg">
      <div>
        <button id="top-left-btn">для организаций</button>
        <button id="top-right-btn">стать автором</button>
      </div>
    </header>
    <div id="pre-root">
      <div id="pre-root-back">
        <i class="material-symbols-outlined">arrow_back</i><p>Назад</p>
      </div>
    </div>
    <div id="outer">
      <div id="root"></div> 
      <div id="nav">
        <div id="navBox">
          <h1 class="h1">Найдите больше статей</h1>
          <p>E-mail автора</p>
          <input id="emailSearch" disabled>
          <p>Название статьи</p>
          <input id="headerSearch" disabled>
          <br>
          <button id="searchArticles" disabled>Поиск</button>
        </div>
      </div>
      <!-- ENABLE INPUTS & BUTTONS WHEN DONE IN JS -->
    </div>
    <footer>
    <div class="dv1">
      <div class="dv2">
        <h2>быстрый доступ</h2>
        <div class="dv3">
          <div class="dv4">
            <p>сообщить об ошибке</p>
          </div>
          <div class="dv4">
            <p>написать нам</p>
          </div>
        </div>
      </div>
      <div class="dv2">
        <h2>навигация</h2>
        <div class="dv3">
          <div class="dv4">
            <p onclick="toMain()">на главную страницу</p>
          </div>
          <div class="dv4">
            <p onclick="toIndex()">на страницу входа и регистрации</p>
          </div>
        </div>
      </div>
    </div>
    <div class="dv1">
      <img id="btm-logo" src="/img/logo-btm.svg">
    </div>
  </footer>
    <script src="/js/act.js"></script>
</body>
</html>